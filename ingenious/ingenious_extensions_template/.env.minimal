# =============================================================================
# Minimal Environment Variables Template
# =============================================================================
# Copy this to .env and fill in your Azure OpenAI credentials

# =============================================================================
# REQUIRED: Azure OpenAI Configuration
# =============================================================================
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_BASE_URL=https://your-endpoint.cognitiveservices.azure.com/
AZURE_OPENAI_MODEL_NAME=gpt-4.1-nano
AZURE_OPENAI_DEPLOYMENT=gpt-4.1-nano
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# =============================================================================
# REQUIRED: Ingenious Configuration Paths
# =============================================================================
INGENIOUS_PROJECT_PATH=./config.yml
INGENIOUS_PROFILE_PATH=./profiles.yml

# =============================================================================
# OPTIONAL: Web Server Configuration
# =============================================================================
WEB_IP_ADDRESS=0.0.0.0
WEB_PORT=80

# =============================================================================
# OPTIONAL: Authentication (leave empty to disable)
# =============================================================================
WEB_AUTH_ENABLE=false
WEB_AUTH_USERNAME=admin
WEB_AUTH_PASSWORD=

# =============================================================================
# OPTIONAL: JWT Authentication Configuration
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# OPTIONAL: Advanced Features (leave empty for minimal setup)
# =============================================================================
AZURE_SEARCH_ENDPOINT=
AZURE_SEARCH_API_KEY=
AZURE_SQL_CONNECTION_STRING=
RECEIVER_API_URL=
GITHUB_CLIENT_SECRET=
GITHUB_CLIENT_ID=
AZURE_STORAGE_REVISIONS_URL=
AZURE_STORAGE_DATA_URL=
LOCAL_SQL_DB_PATH=./.tmp/local.db
LOCAL_SQL_CSV_PATH=./sample_data.csv
LOCAL_SQL_DB_NAME=sample_data
